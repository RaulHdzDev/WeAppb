<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#454545"
    tools:context=".Wecubeta">


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/imagen"
        android:layout_margin="0dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/comfortaa_bold"
                android:layout_gravity="center_horizontal"
                android:hint="  We Cubeta"
                android:textAlignment="center"
                android:textColorHint="#fff"
                android:textSize="30dp" />



        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/comfortaa_light"
            android:padding="10dp"
            android:text="DÃ­a:"
            android:textColor="#fff"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tvCubetaPorcentaje"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:background="@drawable/fondoazul"
            android:fontFamily="@font/comfortaa_bold"
            android:padding="70dp"
            android:text="We Cubeta"
            android:textAlignment="textEnd"
            android:textColor="#fff"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tvCubetaVolumen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:background="@drawable/contornoazul"
            android:fontFamily="@font/comfortaa_bold"
            android:padding="70dp"
            android:text="We Cubeta"
            android:textAlignment="textEnd"

            android:textColor="#0873BA"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btnCalcularCubeta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:background="@drawable/fondoazul"
            android:fontFamily="@font/comfortaa_bold"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:drawableTop="@drawable/botonlogo"
            android:text="Calcular"
            android:textColor="#fff"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tvCubetaObservaciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/comfortaa_bold"
            android:text="Observaciones"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="20dp" />


        </LinearLayout>



</RelativeLayout>